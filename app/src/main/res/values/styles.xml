<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextAppearance.App" parent="TextAppearance.MaterialComponents.Body1">

    </style>

    <style name="TextAppearance.App.Title1">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/largeTextSize</item>
    </style>

    <style name="TextAppearance.App.Title1.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.App.Title2">
        <item name="android:textColor">@color/orange</item>
        <item name="android:textSize">@dimen/mediumTextSize</item>
    </style>
</resources>